<!DOCTYPE html>
<html lang="en">
  <%- include('partials/_head.ejs') %>
  <body style="background-image: url('../css/b.jpg'); background-size: cover">
    <%- include('partials/_header.ejs') %>
    <main role="main">
      <div class="container mt-5">
        <h2 style="color: #ffffff">Login</h2>
        <form action="/auth/login" method="POST">
          <!-- Updated action attribute -->
          <div class="mb-3">
            <input
              type="text"
              name="username"
              placeholder="Username"
              required
              class="form-control"
              style="width: 200px"
            />
          </div>
          <div class="mb-3">
            <input
              type="password"
              name="password"
              placeholder="Password"
              required
              class="form-control"
              style="width: 200px"
            />
          </div>
          <div class="mb-3">
            <button
              type="submit"
              class="btn btn-primary"
              style="background-color: #ff6200; border-color: #ff6200"
            >
              Login
            </button>
            <span style="color: white">Don't have an account?</span>
            <a href="/auth/register" style="color: #ff6200">Register</a>
            <!-- Change color of "Register" link -->
          </div>
        </form>
      </div>
    </main>
    <%- include('partials/_footer.ejs') %>
  </body>
</html>
