<!DOCTYPE html>
<html lang="en">
  <%- include('partials/_head.ejs') %>
  <style>
    /* Specific page styles (body-index) */
    .body-index {
      /* Remove background-image and add styles for video */
      overflow: hidden;
      font-family: "Arial", sans-serif; /* Change font family */
    }
    video {
      position: fixed;
      right: 0;
      bottom: 0;
      min-width: 100%;
      min-height: 100%;
      z-index: -1; /* Ensure the video stays behind other elements */
    }
    .text-white {
      color: white;
    }
    .container {
      padding-top: 100px; /* Adjust padding-top to position the content below the header */
    }
    .feature-icon {
      font-size: 3rem; /* Increase feature icon size */
      margin-bottom: 2rem; /* Increase bottom margin */
      transition: transform 0.3s ease; /* Add transition for smoother hover effect */
    }
    .feature-icon:hover {
      transform: scale(1.1); /* Scale up icon on hover */
    }
    h1 {
      font-size: 3.5rem; /* Increase heading font size */
      font-weight: bold; /* Add bold font weight */
      margin-bottom: 30px; /* Increase bottom margin */
      text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5); /* Add text shadow for depth effect */
    }
    p {
      font-size: 1.4rem; /* Increase paragraph font size */
      line-height: 1.8; /* Adjust line height for better readability */
    }
    .btn-primary {
      font-size: 1.4rem; /* Increase button font size */
      padding: 10px 30px; /* Increase button padding */
      border-radius: 30px; /* Add border-radius for rounded button */
      transition: background-color 0.3s ease; /* Add transition for smoother hover effect */
      background-color: transparent; /* Set button background color to transparent */
      border: 2px solid #fff; /* Add border */
      color: #fff; /* Change button text color to white */
    }
    .btn-primary:hover {
      background-color: rgba(
        255,
        255,
        255,
        0.2
      ); /* Add slight background color on hover */
    }
    .text-container {
      margin-top: -20px; /* Adjust negative margin to shift contents higher */
    }
  </style>
  <body class="body-index">
    <!-- Replace background image with video -->
    <video autoplay loop muted>
      <source src="../css/starry.mp4" type="video/mp4" />
      Your browser does not support the video tag.
    </video>
    <%- include('partials/_header.ejs') %>
    <main role="main" class="container mt-4">
      <div class="row justify-content-center">
        <div class="col-lg-8 text-center">
          <div class="container text-container">
            <h1 class="text-white mb-4">Welcome to CyberPulse</h1>
            <p class="text-white">
              Your ultimate destination for comprehensive vulnerability scanning
              and cybersecurity education.
            </p>
          </div>
          <div class="container">
            <p class="text-white mt-5">
              Ready to secure your digital presence? Get started with CyberPulse
              today.
            </p>
            <a href="/about" class="btn btn-primary mt-3">Get Started</a>
          </div>
        </div>
      </div>
    </main>
  </body>
</html>
