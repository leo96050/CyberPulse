<!DOCTYPE html>
<html lang="en">
  <%- include('partials/_head.ejs') %>
  <body style="background-image: url('../css/b.jpg'); background-size: cover">
    <%- include('partials/_header.ejs') %>
    <main role="main">
      <div class="container mt-5">
        <h2 style="color: aliceblue">Register</h2>
        <form action="/auth/register" method="POST">
          <div class="mb-3">
            <input
              type="text"
              name="username"
              placeholder="Username"
              required
              class="form-control"
              style="width: 200px"
              <!--
              Adjust
              width
              as
              needed
              --
            />
            />
          </div>
          <div class="mb-3">
            <input
              type="password"
              name="password"
              placeholder="Password"
              required
              class="form-control"
              style="width: 200px"
              <!--
              Adjust
              width
              as
              needed
              --
            />
            />
          </div>
          <div class="mb-3">
            <button
              type="submit"
              class="btn btn-primary mr-2"
              style="background-color: #ff6200; border-color: #ff6200"
            >
              Register
            </button>
            <span style="color: white">Already have an account?</span>
            <a href="/auth/login" style="color: #ff6200">Login</a>
          </div>
        </form>
      </div>
    </main>
    <%- include('partials/_footer.ejs') %>
  </body>
</html>
